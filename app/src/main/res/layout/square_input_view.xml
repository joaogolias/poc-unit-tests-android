<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_view_background"
                >
    <EditText
            android:id="@+id/squareInputEt"
            android:layout_width="@dimen/square_input_view_main_width"
            android:layout_height="@dimen/square_input_view_main_width"
            android:gravity="center"
            android:clickable="true"
            android:inputType="textFilter|number"
            android:background="@android:color/transparent"
            android:maxLength="1"
            android:singleLine="true"
            android:textSize="50dp"
            android:cursorVisible="false"
            />

</LinearLayout>